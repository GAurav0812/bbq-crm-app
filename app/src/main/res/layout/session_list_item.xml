<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:weightSum="1"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:layout_marginBottom="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ic_mobile_info"
            android:layout_gravity="center_vertical">
        <!--  <ImageView
                  android:adjustViewBounds="true"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:id="@+id/ic_mobile"
                  android:tint="@color/colorPrimary"
                  android:src="@drawable/ic_mobile"/>-->
        <ImageView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/ic_arrived"
                android:src="@drawable/ic_arrived"/>
        <ImageView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/ic_seated"
                android:src="@drawable/ic_seated"
        />
        <ImageView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/ic_expected"
                android:src="@drawable/ic_expected"
        />
        <ImageView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/ic_cancel"
                android:src="@drawable/ic_cancel"
        />

    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

        <TextView
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@string/appbar_scrolling_view_behavior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_customer_mobile"/>
        <TextView
                android:text=""
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_cust_name"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start">
            <TextView
                    android:text="PAX : "
                    android:textSize="14dp"
                    android:textColor="#107cc9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#107cc9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_cust_pax"/>
            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/ic_occasion"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_occasion"/>
            <TextView
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:id="@+id/txt_occasion"
                    android:textAllCaps="true"

                    android:layout_gravity="start"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ic_status_symbol"
                android:layout_gravity="end">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_tno_icon"
                    android:src="@drawable/ic_table"
                    android:visibility="gone"
                    android:adjustViewBounds="false"
                    android:layout_marginTop="-3dp"
                    android:cropToPadding="false"
                    android:scaleType="center"/>
            <TextView
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="-3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_tno"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">
                <TextView
                        android:text="ETA : "
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:id="@+id/txt_eta"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#10bcc9"
                />
                <TextView
                        android:text=""
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#10bcc9"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/txt_cust_eta"/>
                <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:paddingLeft="5dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_flag1"
                        android:id="@+id/ic_flag1"
                        android:layout_gravity="center_vertical"/>
                <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/ic_flag2"
                        android:visibility="gone"
                        android:id="@+id/ic_flag2"
                        android:layout_gravity="center_vertical"/>
                <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/ic_flag3"
                        android:id="@+id/ic_flag3"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical">
        <ImageView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:src="@drawable/ic_arrow"
                android:id="@+id/ic_mobile"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>