<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:weightSum="1"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:layout_marginBottom="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ic_mobile_info"
            android:layout_gravity="center_vertical">
        <ImageView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/ic_mobile"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_mobile"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

        <TextView
                android:text=""
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/txt_customer_mobile"/>
        <TextView
                android:text=""
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_cust_name"/>
        <TextView
                android:text=""
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_cust_pax"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ic_status_symbol"
                android:layout_gravity="end">
            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:paddingRight="2dp"
                    android:id="@+id/ic_arrived"
                    android:src="@drawable/ic_arrived"/>
            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:paddingRight="2dp"
                    android:id="@+id/ic_seated"
                    android:src="@drawable/ic_seated"
            />
            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:id="@+id/ic_expected"
                    android:paddingRight="2dp"
                    android:src="@drawable/ic_expected"
            />
            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:paddingRight="2dp"
                    android:id="@+id/ic_cancel"
                    android:src="@drawable/ic_cancel"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ic_table_info"
                android:layout_gravity="end">
            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_table"/>
            <TextView
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_tno"/>
        </LinearLayout>
        <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txt_occasion"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="end"/>
    </LinearLayout>

</LinearLayout>