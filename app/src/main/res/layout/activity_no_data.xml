<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="bbq.com.app.NoDataActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/infoPanel6">

        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/access_denied"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/access_denied"
                android:layout_height="110dp"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Check your internet connection and try again"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colordarkgrey"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/infoPanel6"
            android:gravity="center">

        <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="@string/retry"
                android:layout_gravity="center"
                android:id="@+id/button6"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                style="@style/RetryButton"/>

        <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/network_setting"
                android:layout_gravity="center"
                android:id="@+id/button7"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                style="@style/RetryButton"/>
    </LinearLayout>


</RelativeLayout>
